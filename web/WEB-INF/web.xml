<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--home-->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>dimaliahov.controller.ServletHome</servlet-class>
    </servlet>
    <!--login-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>dimaliahov.controller.ServletLogin</servlet-class>
    </servlet>
    <!--registration-->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>dimaliahov.controller.ServletRegistration</servlet-class>
    </servlet>
    <!--shop-->
    <servlet>
        <servlet-name>shop</servlet-name>
        <servlet-class>dimaliahov.controller.ServletAllProduct</servlet-class>
    </servlet>
    <!--admin-->
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>dimaliahov.controller.ServletAdmin</servlet-class>
    </servlet>
    <!--single-->
    <servlet>
        <servlet-name>single</servlet-name>
        <servlet-class>dimaliahov.controller.ServletSingleProd</servlet-class>
    </servlet>
    <!--shopCart-->
    <servlet>
        <servlet-name>shopCart</servlet-name>
        <servlet-class>dimaliahov.controller.ServletCartControl</servlet-class>
    </servlet>


    <!--filter-->
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>dimaliahov.filter.Filter</filter-class>
        <init-param>
            <param-name>access</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <!--filter home-->
    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>admin</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>home</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>shop</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>registration</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>single</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <servlet-name>shopCart</servlet-name>
    </filter-mapping>

    <!--    gzip    -->
    <filter>
        <filter-name>CompressionFilter</filter-name>
        <filter-class>dimaliahov.filter.gzip.GZipServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>


    <!--shopCart-->
    <servlet-mapping>
        <servlet-name>shopCart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <!--single-->
    <servlet-mapping>
        <servlet-name>single</servlet-name>
        <url-pattern>/singleproduct</url-pattern>
    </servlet-mapping>
    <!--admin-->
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <!--shop-->
    <servlet-mapping>
        <servlet-name>shop</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <!--registration-->
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <!--login-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--home-->
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


</web-app>
